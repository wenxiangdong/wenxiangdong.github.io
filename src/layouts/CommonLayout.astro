---
import "@/styles/global.css";
import MetaViewport from "./MetaViewport.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <MetaViewport />
    <title>{title || "文向东的主页"}</title>
  </head>
  <body class="page">
    <slot />
  </body>
</html>
